extends base

block content
  main.main
    .card-container
    
      each user in users
        .card
          .card__header
            .card__picture
              .card__picture-overlay &nbsp;
            h3.heading-tertirary
              span= user.name

          .card__details
            h4.card__sub-heading= `user data`
            p.card__text= user.email
            p.card__text= user.active